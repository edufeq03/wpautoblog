# ============================================
# CONFIGURAÇÕES GERAIS DO FLASK
# ============================================
FLASK_SECRET_KEY=sua_chave_secreta_muito_segura_aqui
FLASK_ENV=production
DEBUG=False

# ============================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ============================================
DATABASE_URL=sqlite:///database.db
# Ou para PostgreSQL:
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/wpautoblog

# ============================================
# CONFIGURAÇÕES DE EMAIL (RECUPERAÇÃO DE SENHA)
# ============================================
# Para Gmail:
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=seu_email@gmail.com
MAIL_PASSWORD=sua_senha_app  # Use "App Password" se tiver 2FA habilitado
MAIL_DEFAULT_SENDER=seu_email@gmail.com

# Para Outlook:
# MAIL_SERVER=smtp-mail.outlook.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=seu_email@outlook.com
# MAIL_PASSWORD=sua_senha

# ============================================
# CONFIGURAÇÕES DO STRIPE (PAGAMENTOS)
# ============================================
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_ID_PRO=price_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_ID_VIP=price_xxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# ============================================
# CONFIGURAÇÕES DO MERCADO PAGO (PAGAMENTOS)
# ============================================
MERCADOPAGO_ACCESS_TOKEN=APP_USR-xxxxxxxxxxxxxxxxxxxxx

# ============================================
# CONFIGURAÇÕES DO GROQ (IA)
# ============================================
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxx

# ============================================
# CONFIGURAÇÕES DO WORDPRESS (INTEGRAÇÃO)
# ============================================
# Estas são configurações padrão, cada site tem suas próprias credenciais
# WP_URL=https://seu-blog.com
# WP_USER=usuario_wordpress
# WP_APP_PASSWORD=senha_app_wordpress

# ============================================
# CONFIGURAÇÕES DE SCHEDULER (TAREFAS AUTOMÁTICAS)
# ============================================
SCHEDULER_API_ENABLED=True
SCHEDULER_TIMEZONE=America/Sao_Paulo

# ============================================
# CONFIGURAÇÕES DE LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=app.log
